# public/.htaccess
#
# URL Rewriting untuk Portal TPL
# Semua request diarahkan ke index.php
#
# Contoh:
# /detail?id=1 → /index.php (diproses oleh router)
# /galeri → /index.php (diproses oleh router)

# Enable mod_rewrite
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Set base directory (adjust jika project ada di subfolder)
    # Jika project di root: RewriteBase /
    # Jika project di subfolder: RewriteBase /portal_tpl/
    RewriteBase /
    
    # Jangan rewrite file/folder yang benar-benar ada
    # (assets, uploads, dll)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Redirect semua request ke index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Security: Prevent directory listing
Options -Indexes

# Security: Prevent access to .php files directly in uploads folder
<FilesMatch "\.php$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# Allow access to index.php only
<Files "index.php">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Allow from all
    </IfModule>
</Files>